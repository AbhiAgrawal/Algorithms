class Solution:
    def longestOnes(self, nums: List[int], k: int) -> int:
        # same as https://leetcode.com/problems/longest-repeating-character-replacement/
        countMap = {1:0,0:0}
        left = 0
        right = 0
        max_length = 0
        for num in nums:
            countMap[num] +=1
            right +=1 

            if countMap[0] > k:
                while(countMap[0] > k):
                    countMap[nums[left]] -=1
                    left +=1
            max_length = max(max_length,right - left)
        return max_length    
        
        
