class Solution:
    ##https://leetcode.com/problems/find-all-people-with-secret/discuss/1606417/Simple-Python-DFS-solution
    def findAllPeople(self, n: int, meetings: List[List[int]], firstPerson: int) -> List[int]:
        
        visited = set([0, firstPerson])
        mapping = defaultdict()
        for x, y, time in meetings:
            if time not in mapping:
                mapping[time] = defaultdict(list)
            mapping[time][x].append(y)
            mapping[time][y].append(x)
        
        def bfs(meetDict, x):
            q=deque()
            q.append(x)
            while q:
                curr = q.popleft()
                for key in meetDict[curr]:
                    if key not in visited:
                        visited.add(key)
                        q.append(key)
        
        for time in sorted(mapping.keys()):
            meetDict = mapping[time]
            for key in meetDict:
                if key in visited:
                    bfs(meetDict, key)
            
        return list(visited)    
