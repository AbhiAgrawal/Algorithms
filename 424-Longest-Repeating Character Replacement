class Solution:
    def characterReplacement(self, st: str, k: int) -> int:
        left = 0
        right = 0
        countMap = {}
        max_length = 0

        for s in st:
            if s not in countMap:
                countMap[s] = 0
            countMap[s] +=1 

            right +=1 
            if (right - left - max(countMap.values())) > k:
                while ((right - left-max(countMap.values())) > k):
                    countMap[st[left]] -= 1 
                    if countMap[st[left]] == 0:
                        del countMap[st[left]]
                    left +=1
            max_length = max(max_length, right - left)
        return max_length
        
